  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="index" class="site_title"><i class="fa fa-paw"></i> <span>SIECE</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            {{#if user}}
            <div class="profile clearfix">
              <div class="profile_pic">
                <img src="img.jpg" alt="..." class="img-circle profile_img">
              </div>
              <div class="profile_info">
                <span>Bienvenido,</span>
                <h2>{{#if user.displayName}}{{user.displayName}}{{else}}{{user.email}}{{/if}}</h2>
              </div>
            </div>
            {{/if}}
            <!-- /menu profile quick info -->
            <br />
            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
              <div class="menu_section">
                <h3>General</h3>
                <ul class="nav side-menu">
                  <li>
                    <a href="index"><i class="fa fa-home"></i> Dashboard</a>
                  </li>
                  <li>
                    <a href="indicadores"><i class="fa fa-bar-chart"></i> Indicadores</a>
                  </li>
                  {{#if user}}
                    <li>
                      <a href="perfil"><i class="fa fa-user"></i> Perfil</a>
                    </li>
                    <li>
                      <a href="formularios"><i class="fa fa-edit"></i> Formularios</a>
                    </li>
                  {{/if}}
                </ul>
              </div>
            </div>
            <!-- /sidebar menu -->
          </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
          <div class="nav_menu">
            <nav>
              <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
              </div>
              <ul class="nav navbar-nav navbar-right">
                <li class="">
                  {{#if user}}
                    <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                      <img src="img.jpg" alt="">{{#if user.displayName}}{{user.displayName}}{{else}}{{user.email}}{{/if}}
                      <span class=" fa fa-angle-down"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-usermenu pull-right">
                      <li><a href="perfil"> Perfil</a></li>
                      <li><a onclick="firebase.auth().signOut()"><i class="fa fa-sign-out pull-right"></i> Cerrar Sesión</a></li>
                    </ul>
                  {{else}}
                    <a href="login"><i class="fa fa-sign-in pull-right mt-1"></i> Iniciar Sesión</a>
                  {{/if}}
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                {{#if success}}
                  <div id="message" class="alert alert-success" role="alert">
                    {{success}}
                  </div>
                {{/if}}
                {{#if error}}
                  <div id="message" class="alert alert-danger" role="alert">
                    {{error}}
                  </div>
                {{/if}}
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Seleccionar un Indicador para visualizar</h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <form id="demo-form2" class="form-label-left" data-parsley-validate method="post">
                      <div class="form-group">
                        <label class="col-xs-12" for="report">
                          Indicador
                        </label>
                        <div class="col-xs-6">
                          <select class="select2_single form-control" id="report" tabindex="-1" name="report" required>
                            <option></option>
                            <option value="financiamiento_anual">Financiamiento de CE anual</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-xs-12 pt">
                          Periodo
                        </label>
                        <div class="col-xs-6">
                          <label for="from_year">Desde: </label>
                          <input type="number" id="from_year" maxlength="4" minlength="4" min="1950" max="2018" name="from_year" required>
                          <label for="to_year">Hasta: </label>
                          <input type="number" id="to_year" maxlength="4" minlength="4" min="1950" max="2018" name="to_year" required>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-xs-12 pt">
                          <button type="submit" class="btn btn-success">Ver Indicador</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Tabla</h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="forms-datatable" class="table table-striped table-bordered">
                      <thead>
                      <tr>
                        <th>Institución/Año</th>
                        {{#each table_results.0.indicators}}
                          <th>{{this.reported_year}}</th>
                        {{/each}}
                      </tr>
                      </thead>
                      <tbody>
                      {{#each table_results}}
                        <tr>
                          <td>{{this.institution_name}}</td>
                          {{#each this.indicators}}
                            {{#if this.value}}
                              <td>{{this.value}}</td>
                            {{else}}
                              <td>-</td>
                            {{/if}}
                          {{/each}}
                        </tr>
                      {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Gráfico</h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <div id="chart"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
          <div class="pull-right">
            Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
          </div>
          <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
      </div>
    </div>

    <!-- jQuery -->
    <script src="jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="fastclick.js"></script>
    <!-- NProgress -->
    <script src="nprogress.js"></script>
    <!-- iCheck -->
    <script src="icheck.min.js"></script>
    <!-- Parsley -->
    <script src="parsley.min.js"></script>
    <!-- i18n/es.js-->
    <script src="es.js"></script>
    <!-- Datatables -->
    <script src="jquery.dataTables.min.js"></script>
    <script src="dataTables.bootstrap.min.js"></script>
    <script src="dataTables.responsive.min.js"></script>
    <script src="responsive.bootstrap.js"></script>
    <script src="jszip.min.js"></script>
    <!-- morris.js -->
    <script src="raphael.min.js"></script>
    <script src="morris.min.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="custom.min.js"></script>

    <script type="text/javascript">
      $(document).ready(() => {
        {{#if selected_report}}
          $("#report option[value={{selected_report}}]").attr("selected", true);
        {{/if}}

        {{#if from_year}}
          $("#from_year").val("{{from_year}}");
        {{/if}}

        {{#if to_year}}
          $("#to_year").val("{{to_year}}");
        {{/if}}

        <!--{{#if results}}-->
          <!--console.log({{{results}}});-->
        <!--{{/if}}-->

        $("#forms-datatable").DataTable({
          "language": {
            "lengthMenu": "Mostrar _MENU_ registros por página",
            "zeroRecords": "Sin datos para mostrar",
            "info": "Página _PAGE_ de _PAGES_",
            "infoEmpty": "Sin registros",
            "infoFiltered": "(filtrado de _MAX_ registros totales)",
            "search": "Filtrar:",
            "paginate": {
              "first":      "Primera",
              "last":       "Última",
              "next":       "Siguiente",
              "previous":   "Anterior"
            }
          }
        });
      })
    </script>

    <script type="text/javascript">
      document.addEventListener("DOMContentLoaded", () => {
        {{#if chart_results.[0].institution_name}}
          let chart = new Morris.Line({
            element: 'chart',
            data: [
              {{#each chart_results}}
                {
                  {{#each this}}
                    '{{@key}}': '{{this}}',
                  {{/each}}
                },
              {{/each}}
            ],
            xkey: 'reported_year',
            ykeys: [
              {{#each institution_names}}
                '{{this}}',
              {{/each}}
            ],
            labels: [
              {{#each institution_names}}
                '{{this}}',
              {{/each}}
            ]
          });
        {{/if}}
      });
    </script>
  </body>
